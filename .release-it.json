{
    "hooks": {
        "after:git:release": "npm run build && npm run pack",
        "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "git": {
        "commitMessage": "chore: release v${version}"
    },
    "npm": {
        "publish": false
    },
    "github": {
        "release": true,
        "releaseName": "${version}",
        "assets": [
            "pack/*.zip"
        ]
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "CHANGELOG.md",
            "preset": "atom"
        }
    }
}
