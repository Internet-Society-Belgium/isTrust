{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "jsx": "preserve",
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "module": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
